{
  "compilerOptions": {
     "types": ["vite/client", "node"],

    // Compatibilidad mÃ¡xima
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2015", "ES2016", "ES2017"],
    
    // React
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // MÃ³dulos
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    // Tipos
    "noUnusedLocals": false,        // ðŸ”¥ Desactiva error por variables locales no usadas
    "noUnusedParameters": false,    // ðŸ”¥ Desactiva error por parÃ¡metros no usados
    "noFallthroughCasesInSwitch": true,
    
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,

    
    // Paths
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@atoms/*": ["src/components/atoms/*"],
      "@molecules/*": ["src/components/molecules/*"],
      "@organisms/*": ["src/components/organisms/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
    "src/types/**/*",
  ],
  "references": [{ "path": "./tsconfig.node.json" }],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.stories.*"]
}